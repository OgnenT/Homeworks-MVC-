@model Buddy

<div class="card">
    <img src=@Model.ImgUrl class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p class="card-text">Zdravo jas sum @Model.FullName, a mojt mail e @Model.Mail Pozdrav</p>
        @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
        <a asp-controller="Ognen" asp-action="BuddyDetails" asp-route-id="@Model.Id">Go for Details | </a>
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        @*@Html.ActionLink("Go for Details", "BuddyDetails", new { id = @Model.Id }, new { @class = "details" })*@
    </div>
</div>

<style>
    a.details {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: blue;
        color: white;
        font-size: 24px
    }

    .card {
        width: 28%;
        margin: 20px
    }

    .card-img-top {
        width: 100%;
        height: 300px
    }
</style>